<script>
        $(document).ready(function() {
            $('#client_form').on('submit', function(event) {
                let valid = true;

                $('.validate-text').each(function() {
                    if (!/^[0-9][0-9A-Z]*$/.test($(this).val())) {
                        alert('Por favor ingrese un texto válido en el campo ' + $(this).attr('name'));
                        valid = false;
                        return false; 
                    }
                });

                if (!valid) {
                    event.preventDefault(); 
                }
            });
        });
    </script>
